<div i18n:domain="pfwbged.policy" tal:condition="viewlet/show_button">
  <form action="++add++dmsoutgoingmail" method="GET"
    tal:attributes="action string:${viewlet/portal_url}/courriers/++add++dmsoutgoingmail">
    <input type="submit" name="form.buttons.create"
        value="Create outgoing mail"
        i18n:attributes="value" />
    <input type="hidden" name="form.widgets.IDublinCore.title"
        value="title"
        tal:attributes="value viewlet/title" />
    <input type="hidden" name="form.widgets.recipients:list"
        value="recipients"
        tal:attributes="value viewlet/recipients" />
    <input type="hidden" name="form.widgets.in_reply_to"
        value="in_reply_to"
        tal:attributes="value viewlet/in_reply_to" />
    <input type="hidden" name="form.widgets.treating_groups:list"
        value="treating_groups"
        tal:attributes="value viewlet/treating_groups" />
  </form>
</div>
